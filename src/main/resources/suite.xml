<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name = "WebDervicesTest" verbose ="1" parallel="tests" thread-count="3">
    <test name="WebDervicesTest">
        <classes>
            <class name="TestUsers">
                <methods>
                    <include name=".*checkStatusCode().*"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="WebDervicesTest1">
        <classes>
            <class name="TestUsers">
                <methods>
                    <include name=".*checkResponseHeader().*"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="WebDervicesTest2">
        <classes>
            <class name="TestUsers">
                <methods>
                    <include name=".*checkResponseBody().*"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>